<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight([%level]) %gray([%file:%line]) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="COLOR"/>
    </root>
</configuration>